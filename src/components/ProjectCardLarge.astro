---
import { Image } from "astro:assets";
const {title,imgSrc, imgAlt} = Astro.props;
const tags : string[] = Astro.props.tags;
---

<article class="card">
    <figure class="card-icon">
        <Image src={imgSrc} alt={imgAlt}></Image>
    </figure>
    <div class="card-text">
        <h3 class="card-title">{title}</h2>
        <div class="tags">
            {
                tags.map(tag=>
                    <span 
                        class="tag"
                        style={`border-color:var(--${tag.toLocaleLowerCase()}-bg); width:${tag.length+2}ch;`}
                    >
                        {tag}
                    </span>
                )
            }
        </div>
    </div>
</article>


<style>
    
    .card{
        background-color: var(--bg-100);
    }
    .card-icon{
        width: 100%;
        margin: 1rem auto;
    }

    .card-icon img{
        max-width: 72px;
        height: auto;
        background-color: #d9d9db;
		border: 8px solid #f7f7f7;
		border-radius: 50%;
        box-shadow: 5px 8px 15px 4px rgba(0,0,0,0.1);
        box-shadow: 2px 3px 12px 1px rgba(0,0,0,0.2);
    }
 

	article{
		margin: 1rem 0;
		padding: 1rem;
		background-color: #fff;
		border-radius: var(--border-radius-md);
		box-shadow: 0px 0px 8px 0px rgba(0,0,0,0.1);
	}
	article h3{
		margin-bottom: 1rem;
	}
	article p{
		margin-top: 1rem;
	}
    .card-text{
        font-family: sans-serif;
    }
    .tag{
        display: inline-block;
        margin: 0 0.25rem;
        color: var(--text-400);
        border: 2px solid;
        /* background-color: var(--bg-400-alpha); */
        font-size: 0.9rem;
        font-weight: bold;
        text-align: center;
        /* padding: 0 0.5rem; */
        border-radius: 1rem;
    }
</style>