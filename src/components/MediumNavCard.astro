---
import { Image } from "astro:assets";
const{title,imgSrc,imgAlt,url} = Astro.props;
const tags:string[] = Astro.props.tags;
---
<article class="medium-card">
    <figure class="medium-card-img">
        <Image src={imgSrc} alt={imgAlt} />
    </figure>
    <div class="medium-card-text">
        <h3 class="card-title">{title}</h3>
        <p class="card-tags">
            {tags.map(tag=><span>{tag}</span>)}
        </p>
    </div>
    <nav class="medium-card-nav">
        <a href={`/projects/${url}`}>
            <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="icon icon-tabler icons-tabler-outline icon-tabler-chevron-right"
                ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
                    d="M9 6l6 6l-6 6"></path></svg
            >
        </a>
    </nav>
</article>

<style>
    .medium-card {
        position: relative;
        width: 100%;
        margin: 1rem auto;
        padding: 1rem 2rem;
        border: 1px solid var(--card-border-color);
        background-color: var(--card-bg);
        border-radius: var(--border-radius-lg);
        box-shadow: 0px 0px 0px 1px var(--card-shadow);
        transition: box-shadow 0.35s ease-in-out;
    }

    .medium-card:hover{
        box-shadow: 0px 0px 0px 6px var(--card-shadow);
    }

    .medium-card-img{
        margin-bottom: 0.5rem;
    }
    .medium-card-img img{
        max-width: 62px;
        height: auto;
        border-radius: 50%;
        background-color: var(--card-bg);
        border: 6px solid var(--img-border-color);
        /* box-shadow: 0px 0px 4px 0px var(--card-border-color); */
        box-shadow: 0 0 0 1px #f7f7f7,0 0 0 5px var(--img-border-color),0 0 0 6px #f0f0f0;
    }
    .medium-card-text {
        margin-top: 0.5rem;
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }
    .medium-card-text h3{
        font-size: 1.5rem;
        color: var(--text-400);
    }
    .medium-card-text p{
        font-weight: 500;
    }
    .medium-card-nav {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
    }
    .medium-card-nav a {
        display: block;
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: end;
        align-items: center;
        padding: 0.5rem;
    }

    .medium-card-nav a > svg {
        stroke: var(--svg-hover-inactive);
        stroke-width: 4px;
        transition: all 0.3s ease-in-out;
    }
    .medium-card-nav a:hover > svg {
        stroke: var(--svg-hover-active);
        transform: translateX(0.4rem) scale(1.1);
    }

    @media screen and (min-width: 720px) {
  
        .medium-card{
            padding: 1.25rem 1rem;
            display: flex;
            justify-content: start;
            align-items: center;
            gap: 2rem;
        }

        .medium-card-img{
            display: block;
            margin: 0;
        }

        .medium-card-text{
            margin: 0;
        }
    }
</style>
