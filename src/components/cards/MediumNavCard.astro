---
import { Image } from "astro:assets";
const{title,imgSrc,imgAlt,url} = Astro.props;
const tags:string[] = Astro.props.tags;
const BASE_URL = import.meta.env.BASE_URL;
---
<article class="medium-card">
    <section class="card-header">
        <figure class="card-img">
            <Image src={imgSrc} alt={imgAlt} />
        </figure>
        <h3 class="card-title">{title}</h3>
    </section>
    <section class="tags">
        <ul class="tags-list">    
            {tags.map(tag=><li>{tag}</li>)}
        </ul>
    </section>
    <nav class="medium-card-nav">
        <a href={`${BASE_URL}${url}`} aria-labelledby="Abrir enlace del proyecto">
            <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="icon icon-tabler icons-tabler-outline icon-tabler-chevron-right"
                >
                <title>{title}</title>
                <path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path d="M9 6l6 6l-6 6"></path></svg
            >
        </a>
    </nav>
</article>

<style>
    .medium-card {
        position: relative;
        width: 100%;
        margin: 1rem auto;
        padding: 1rem 2rem;
        border: 1px solid var(--border-color-2);
        background-color: var(--card-bg);
        border-radius: var(--border-radius-md);
        transition: box-shadow 0.35s ease-in-out;
    }

    .medium-card:hover{
        box-shadow: 0px 0px 0px 6px var(--shadow-color-3);
    }

    .card-header{
        margin-bottom: 1rem;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: start;
        gap: 1rem;
    }

    .card-header h3{
        font-size: 1.5rem;
    }

    .card-img{
        width: 64px;
        height: 64px;
        display: flex;
        justify-content: center;
        align-items: center;
        box-shadow: inset 0 0 100px 1px var(--body-bg);
        border-radius: 50%;
        img{
            border-radius: inherit;
            width: 48px;
            height: 48px;
            box-shadow: 0 0 20px 5px var(--border-color-2);
        }
    }
    .medium-card-nav {
        position: absolute;
        top: 0;
        left: 0;
        right: 1.5rem;
        bottom: 0;
    }
    .medium-card-nav a {
        display: block;
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: end;
        align-items: center;
        padding: 0.5rem;
    }

    .medium-card-nav a > svg {
        stroke: var(--svg-inactive);
        stroke-width: 4px;
        transition: all 0.3s ease-in-out;
    }
    .medium-card-nav a:hover > svg {
        stroke: var(--svg-active);
        transform: translateX(0.4rem) scale(1.1);
    }

    .tags-list{
        list-style-type: none;
        padding: 0;
        margin: 0;
        display: flex;
        align-items: end;
        justify-content: start;
        gap: 0.5rem;
        font-size: 0.95rem;
        font-weight: 500;
        text-transform: capitalize;
    }
    .tags-list li{

        padding: 0 0.5rem;
        background-color: var(--tag-bg);
        border-radius: 2rem;
        color: var(--p-color);
        text-transform: uppercase;
        font-weight: 600;
        font-size: 0.9rem;
        filter: drop-shadow( 0px 0px 1px var(--drop-shadow));
    }
    @media screen and (min-width: 420px) {
        .card-header{
            flex-direction: row;
            justify-content: start;
            align-items: center;
        }
    }

    @media screen and (min-width: 720px) {
  
        .medium-card{
            padding: 1rem 2rem;
        }

        .medium-card-img{
            flex-direction: column;
            align-items: start;
            margin: 0;
        }

        .medium-card-img img{
            max-width: 52px;
        }

        .medium-card-text{
            margin: 0;
        }
        .medium-card-img h3{
            font-size: 1.6rem;
            font-weight: 600;
        }
    }
</style>
