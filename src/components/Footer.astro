<style>
     .footer{
        margin-top: 1rem;
        margin-bottom: 1rem;
        display: flex;
        gap: 1rem;
        flex-direction: column;
        justify-content: space-between;
    }
    .social, .copy-info{
        padding: 1.5rem 1rem;
        background-color: var(--section-bg);
        border-radius: var(--border-radius-md);
    }
    .social{
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: center;
        gap: 1.5rem;
    }
    .social-navbar{
        width: 100%;
    }

    .social-navbar ul{
        list-style-type: none;
        display: flex;
        justify-content: space-around;
        align-items: center;
        padding: 0;
        margin: 0;
    }
    .social h2,p,
    .copy-info h2,p{
        color: var(--p-color);
        font-weight: 500;
    }

    .social-button{
        border: thin solid var(--section-bg);
        width: var(--button-lg);
        height: var(--button-lg);
        background-color: var(--button-bg-3);
        transition: box-shadow 0.3s ease-in-out;
    }
    
    .social-button:hover{
        box-shadow: 0px 0px 0px 5px var(--shadow-color-3);
    }

    .copy-info{
        padding: 1rem 1rem;
        text-align: center;
    }
    @media screen and (min-width:920px) {
        .social{
            flex-direction: row ;
            justify-content: space-between;
        }
        .social nav{
            width: 40%;
        }
    }
    
</style>